{
    "description": "Hotkey remappings for Preview.app",
    "manipulators": [
        {
            "conditions": [
                {
                    "bundle_identifiers": [
                        "^com\\.apple\\.Preview$"
                    ],
                    "type": "frontmost_application_if"
                }
            ],
            "from": {
                "key_code": "s",
                "modifiers": {
                    "mandatory": [
                        "control"
                    ]
                }
            },
            "to": [
                {
                    "key_code": "1",
                    "modifiers": [
                        "command",
                        "option"
                    ]
                },
                {
                    "key_code": "2",
                    "modifiers": [
                        "command",
                        "option"
                    ]
                }
            ],
            "type": "basic"
        }
    ]
}
